{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@magazine/config": ["packages/config/src"],
      "@magazine/db": ["packages/db/src"],
      "@magazine/ui": ["packages/ui/src"]
    }
  }
}

