{
  "name": "magazine-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter services-api dev",
    "dev:web": "pnpm --filter apps-web dev",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "lint": "eslint . --ext .ts,.tsx,.js --max-warnings=0",
    "format": "prettier --write .",
    "prepare": "husky install",
    "build:packages": "pnpm --filter @magazine/config build && pnpm --filter @magazine/db build",
    "build:apps": "pnpm --filter services-api build"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5"
  }
}
